@using DevLunch.ViewModels
@model DevLunch.ViewModels.LunchCreateEditViewModel

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Lunch</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.Hidden("Host", value: User.Identity.Name)

        <div class="form-group">
            @Html.LabelFor(model => model.MeetingTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line" data-val="true" data-val-required="The MeetingTime field is required." id="MeetingTime" name="MeetingTime" type="datetime-local" value="@Model.MeetingTime.ToDateTimeLocal()" />
                @Html.ValidationMessageFor(model => model.MeetingTime, "", new {@class = "text-danger"})
            </div>
        </div>

        @* todo: validate user selectes at least one checkbox*@
        <div class="form-group">
            @Html.LabelFor(model => model.Restaurants, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Restaurants)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@ViewBag.Title" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


