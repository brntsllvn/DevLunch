@model IEnumerable<DevLunch.ViewModels.LunchDetailsViewModel>

@{
    ViewBag.Title = "Lunches";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Host)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MeetingTime)
        </th> 
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Host, "Details", new {id = item.Id})
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MeetingTimeDisplay)
        </td>
        <td>
            <a href="@Url.Action("Delete", new {id = item.Id})">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
          
</td>
    </tr>
}

</table>
